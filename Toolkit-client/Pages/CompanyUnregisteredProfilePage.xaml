<local:ToolkitPage x:Class="Toolkit_Client.Pages.CompanyUnregisteredProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Toolkit_Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompanyUnregisteredProfilePage" Background="{DynamicResource WindowBackgroundColor}">
    <Grid>
        <ScrollViewer Background="#fafafa" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <!-- Партнерство -->
            <StackPanel Background="#F5F5F5" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Профиль" Background="#F0F0F0" FontSize="24" TextAlignment="Center" Style="{StaticResource AccountHeaderTextBlock}" />
                <TextBlock Text="На данной момент вы не имеете зарегистрированной компании." Width="440" HorizontalAlignment="Left" Margin="5" Style="{StaticResource BlueTextBlock}" />
                <Button Name="RegisterButton" Content="Зарегистрировать" Margin="5" Width="280" Style="{StaticResource BlueButton}" Click="RegisterButton_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:ToolkitPage>
